sync:
  defaults:
    permissions:
      defaultFileMode: "0666"
      defaultDirectoryMode: "0777"
    ignore:
      vcs: true
      paths:
        - '.idea'
        - '.project'
        - 'data/*/cache'
        - '*.log'
        - 'docker'
        - '.composer'
        - '.npm'
        - 'mutagen.*'
        - 'docker-compose.*'
        - '*.env'
        - 'bin/'
        - 'context/'
        - 'env/'
        - 'images/'
  project:
    alpha: "../../../"
    beta: "docker://{{ namespace }}_{{ tag }}_sync_1/data"
    mode: "two-way-safe"
    ignore:
      paths:
        - 'vendor'
        - 'node_modules'
  vendor:
    alpha: "../../../vendor"
    beta: "docker://{{ namespace }}_{{ tag }}_sync_1/data/vendor"
    mode: "two-way-safe"
    ignore:
      vcs: false
  nodeModules:
    alpha: "../../../node_modules"
    beta: "docker://{{ namespace }}_{{ tag }}_sync_1/data/node_modules"
    mode: "two-way-safe"
