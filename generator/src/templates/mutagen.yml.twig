sync:
  defaults:
    permissions:
      defaultFileMode: "0666"
      defaultDirectoryMode: "0777"
    ignore:
      paths:
        - '/.git'
        - '/mutagen.*'
        - '/.unison'
        - '/.docker-sync'
        - '/.idea'
        - '/.project'
        - '/.composer'
        - '/.npm'
        - '/data/*/cache'
        - '*.log'
        - '/docker'
  project:
    alpha: "../../../"
    beta: "docker://{{ namespace }}_{{ tag }}_sync/data"
    mode: "two-way-resolved"
