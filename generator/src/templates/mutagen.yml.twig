sync:
  defaults:
    permissions:
      defaultFileMode: "0666"
      defaultDirectoryMode: "0777"
    ignore:
      vcs: true
      paths:
        - '/mutagen.*'
        - '/.unison'
        - '/.docker-sync'
        - '.idea'
        - '.project'
        - '.composer'
        - '.npm'
        - '/data/*/cache'
        - '/docker'
  project:
    alpha: "../../../"
    beta: "docker://{{ namespace }}_{{ tag }}_sync/data"
    mode: "one-way-replica"
    configurationBeta:
      watch:
          mode: "no-watch"
