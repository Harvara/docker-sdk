  {{ project_name ~ '_' ~ serviceName }}:
    image: postgres:10-alpine
    container_name: {{ project_name ~ '_' ~ serviceName }}
    networks:
      - {{ docker_sdk_project_name }}_private
    labels:
      'spryker.app.name': {{ project_name ~ '_' ~ serviceName }}
      'spryker.app.type': services
      'spryker.project': ${SPRYKER_DOCKER_PREFIX}:${SPRYKER_DOCKER_TAG}
    healthcheck:
      test: [ "CMD", "pg_isready" ]
      interval: 10s
      timeout: 5s
      retries: 5
    environment:
      POSTGRES_USER: "{{ serviceData['root']['username'] }}"
      POSTGRES_PASSWORD: "{{ serviceData['root']['password'] }}"
    volumes:
      - {{project_name}}-{{ serviceName }}-{{ serviceData['engine'] }}-data:/var/lib/postgresql/data:rw
