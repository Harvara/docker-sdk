  {{ project_name ~ '_' ~ serviceName }}:
    image: opensearchproject/opensearch:1.3.4
    container_name: {{ project_name ~ '_' ~ serviceName }}
    networks:
      - {{ docker_sdk_project_name }}_private
    labels:
      'spryker.app.name': {{ project_name ~ '_' ~ serviceName }}
      'spryker.app.type': services
      'spryker.project': ${SPRYKER_DOCKER_PREFIX}:${SPRYKER_DOCKER_TAG}
    healthcheck:
      test: ["CMD", "curl", "-f", "localhost:9200/_cat/health"]
      interval: 10s
      timeout: 5s
      retries: 5
    ulimits:
      memlock:
        soft: -1
        hard: -1
      nofile:
        soft: 65536
        hard: 65536
    environment:
      ES_JAVA_OPTS: "-Xms512m -Xmx512m"
    volumes:
      - {{project_name}}-{{ serviceName }}-{{ serviceData['engine'] }}-data:/usr/share/opensearch/data:rw
      - ./${DEPLOYMENT_PATH}/context/opensearch/opensearch.yml:/usr/share/opensearch/config/opensearch.yml:ro
