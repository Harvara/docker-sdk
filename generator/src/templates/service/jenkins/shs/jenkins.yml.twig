  {{ serviceName }}:
    image: spryker/jenkins:shs
    networks:
      - private
    labels:
      'spryker.app.name': scheduler
      'spryker.app.type': services
      'spryker.project': ${SPRYKER_DOCKER_PREFIX}:${SPRYKER_DOCKER_TAG}
    healthcheck:
      test: [ "CMD", "nc", "-z", "localhost", "8080" ]
      interval: 10s
      timeout: 5s
      retries: 5
    environment:
        JAVA_OPTS: '-Djenkins.install.runSetupWizard=false -Xms128m -Xmx128m -Dhudson.security.csrf.GlobalCrumbIssuerConfiguration.DISABLE_CSRF_PROTECTION={{ serviceData['csrf-protection-enabled'] ? 'false' : 'true' }}'
        TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_REGION: ${TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_REGION}
        TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_ACCESS_KEY: ${TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_ACCESS_KEY}
        TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_SECRET_KEY: ${TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_SECRET_KEY}
        TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_LOG_GROUP: ${TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_LOG_GROUP}
        TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_LOG_STREAM: ${TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_LOG_STREAM}
        TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_LOG_DATA_METRIC_NAME: ${TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_LOG_DATA_METRIC_NAME}
        TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_LOG_DATA_SOURCE: ${TELEGRAF_OUTPUTS_CLOUDWATCH_LOGS_LOG_DATA_SOURCE}
    volumes:
      - {{ serviceName }}-{{ serviceData['engine'] }}-data:/var/jenkins_home:rw
      - ${DEPLOYMENT_PATH}/context/jenkins/spryker.sh:/usr/bin/spryker.sh:rw
