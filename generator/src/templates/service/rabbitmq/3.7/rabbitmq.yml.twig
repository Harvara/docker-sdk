  {{ project_name ~ '_' ~ serviceName }}:
    image: spryker/rabbitmq:3.7.14
    container_name: {{ project_name ~ '_' ~ serviceName }}
    hostname: {{ serviceName }} # RabbitMQ determines the cluster by its hostname
    networks:
      - {{ docker_sdk_project_name }}_private
    labels:
      'spryker.app.name': {{ project_name ~ '_' ~ serviceName }}
      'spryker.app.type': services
      'spryker.project': ${SPRYKER_DOCKER_PREFIX}:${SPRYKER_DOCKER_TAG}
    healthcheck:
      test: [ "CMD", "nc", "-z", "localhost", "5672" ]
      interval: 10s
      timeout: 5s
      retries: 10
    environment:
      RABBITMQ_DEFAULT_USER: "spryker"
      RABBITMQ_DEFAULT_PASS: "secret"
    volumes:
      - {{project_name}}-{{ serviceName }}-{{ serviceData['engine'] }}-data:/var/lib/rabbitmq:rw
