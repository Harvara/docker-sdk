  {{ project_name ~ '_' ~ serviceName }}:
    image: spryker/chromedriver
    container_name: {{ project_name ~ '_' ~ serviceName }}
    networks:
      - {{ docker_sdk_project_name }}_public
    init: true
    labels:
      'spryker.app.name': {{ project_name ~ '_' ~ serviceName }}
      'spryker.app.type': services
      'spryker.project': ${SPRYKER_DOCKER_PREFIX}:${SPRYKER_DOCKER_TAG}
    expose:
      - "4444"
    healthcheck:
      test: [ "CMD", "nc", "-z", "localhost", "4444" ]
      interval: 5s
      timeout: 5s
      retries: 5
    command: [ "--port=4444", "--whitelisted-ips=", "--allowed-origins=*", "--url-base=/wd/hub" ]
