  {{ applicationName }}:
    image: ${SPRYKER_DOCKER_PREFIX}_app:${SPRYKER_DOCKER_TAG}-{{ applicationData['application']}}
    depends_on:
      - database
      - broker
      - key_value_store
      - session
      - search
    networks:
      - services
      - private
    environment:
      BLACKFIRE_AGENT_SOCKET: "tcp://blackfire:8707"
      SPRYKER_XDEBUG_HOST_IP: ${SPRYKER_XDEBUG_HOST_IP}
      PHP_IDE_CONFIG: "serverName={{ docker['debug']['server-name'] | default('spryker') }}"
    env_file:
      - ${DEPLOYMENT_PATH}/env/{{ applicationName }}.env
    <<: *app-volumes
