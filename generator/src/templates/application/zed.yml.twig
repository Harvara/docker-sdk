  {{ applicationName | lower }}:
    image: ${SPRYKER_DOCKER_PREFIX}_app:${SPRYKER_DOCKER_TAG}-{{ applicationName | lower }}
    depends_on:
      - database
      - broker
      - key_value_store
      - session
      - search
    networks:
      - services
      - private
    environment:
      SPRYKER_XDEBUG_HOST_IP: ${SPRYKER_XDEBUG_HOST_IP}
    env_file:
      - ${DEPLOYMENT_PATH}/env/{{ applicationName }}.env
    <<: *app-volumes
