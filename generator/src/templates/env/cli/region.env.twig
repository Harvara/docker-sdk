# This environment exclusively for Zed CLI

{% include "env/application/zed.env.twig" with _context %}

# REGION SPECIFIC
SPRYKER_CURRENT_REGION={{ regionName }}
SPRYKER_SEARCH_NAMESPACE={{ regionData['services']['search']['namespace'] }}
SPRYKER_KEY_VALUE_STORE_NAMESPACE={{ regionData['services']['key_value_store']['namespace'] }}
SPRYKER_BROKER_NAMESPACE={{ regionData['services']['broker']['namespace'] }}
SPRYKER_SESSION_BE_NAMESPACE={{ regionData['services']['session']['namespace'] }}

{% if services['mail']['sender']['email'] is not empty %}
SPRYKER_MAIL_SENDER_EMAIL={{ services['mail']['sender']['email'] | env_var }}
{% endif %}
{% if services['mail']['sender']['name'] is not empty %}
SPRYKER_MAIL_SENDER_NAME={{ services['mail']['sender']['name'] | env_var }}
{% endif %}

{% if endpointMap[regionName] is not empty %}
SPRYKER_FE_HOST={{ endpointMap[regionName]['yves'] | split(':') | first }}
SPRYKER_FE_PORT={{ (endpointMap[regionName]['yves'] | split(':'))[1] | default(project['_defaultPort']) }}
{% if endpointMap[regionName]['glue'] is not empty %}
SPRYKER_API_HOST={{ endpointMap[regionName]['glue'] | split(':') | first }}
SPRYKER_API_PORT={{ (endpointMap[regionName]['glue'] | split(':'))[1] | default(project['_defaultPort']) }}
{% endif %}
{% if endpointMap[regionName]['glue-storefront'] is not empty %}
SPRYKER_GLUE_STOREFRONT_HOST={{ endpointMap[regionName]['glue-storefront'] | split(':') | first }}
SPRYKER_GLUE_STOREFRONT_PORT={{ (endpointMap[regionName]['glue-storefront'] | split(':'))[1] | default(project['_defaultPort']) }}
{% endif %}
{% if endpointMap[regionName]['glue-backend'] is not empty %}
SPRYKER_GLUE_BACKEND_HOST={{ endpointMap[regionName]['glue-backend'] | split(':') | first }}
SPRYKER_GLUE_BACKEND_PORT={{ (endpointMap[regionName]['glue-backend'] | split(':'))[1] | default(project['_defaultPort']) }}
{% endif %}
SPRYKER_BE_HOST={{ endpointMap[regionName]['backoffice'] | split(':') | first }}
SPRYKER_BE_PORT={{ (endpointMap[regionName]['backoffice'] | split(':'))[1] | default(project['_defaultPort']) }}
{% endif %}

{% if project['docker']['ssl']['enabled'] %}
SPRYKER_SSL_ENABLE=1
{% endif %}
