{% set endpointMap = endpointMap | first %}
{% set protocol = project['docker']['ssl']['enabled'] ? 'https://' : 'http://' %}
{% set host = endpointMap['glue'] | split(':') | first %}
{% set defaltPort = project['docker']['ssl']['enabled'] ? 443 : 80 %}
{% set port = (endpointMap['glue'] | split(':'))[1] | default(defaltPort) %}
SPRYKER_SWAGGER_API_HOST={{ protocol ~ host ~ ':' ~ port }}