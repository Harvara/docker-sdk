{% set protocol = project['docker']['ssl']['enabled'] ? 'https://' : 'http://' %}
{% set firstGlueEndpointMap = endpointMap | first %}
{% set swaggerEndpoint = project['services']['swagger']['endpoints'] | keys | first %}
SPRYKER_SWAGGER_API_HOST={{ protocol ~ firstGlueEndpointMap['glue'] }}
SWAGGER_JSON=/var/specs/spryker_rest_api.schema.yml
SPRYKER_GLUE_APPLICATION_CORS_ALLOW_ORIGIN={{ protocol ~ swaggerEndpoint }}
