    location /assets/ {
        root /data/public/{{ endpointData['entry-point'] }};
        access_log  off;
        expires     7d;
        add_header  Pragma public;
        add_header  Cache-Control "public, must-revalidate, proxy-revalidate";
        etag on;
        try_files   $uri =404;
    }

    location / {
        {{ index is not empty ? 'index ' ~ index : '' }}
        root /data/public/{{ endpointData['entry-point'] }};
        access_log  off;
        expires     7d;
        add_header  Pragma public;
        add_header  Cache-Control "public, must-revalidate, proxy-revalidate";
        etag on;
        try_files   $uri $uri/ @proxy;
    }
