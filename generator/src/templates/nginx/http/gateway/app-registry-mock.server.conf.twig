server {
{#todo: fix#}
  server_name app-registry-mock.spryker.local;
  listen 80;

  error_page 400 401 402 403 404 405 406 407 408 409 410 411 412 413 414 415 416 417 418 422 425 426 428 429 431 451 /errorpage/4xx.html;
  error_page 500 501 502 504 505 506 507 508 509 510 511 /errorpage/5xx.html;
  error_page 503 /maintenance/index.html;
  access_log /dev/stdout combined;
  error_log /dev/stderr;

  root /data/public/GlueBackend;
  index index.php;

  if ($request_uri ~* "^(.*/)index\.php(.*)$") {
    return 301 $1;
  }

  location / {
    access_log  off;
    expires     7d;
    add_header  Pragma public;
    add_header  Cache-Control "public, must-revalidate, proxy-revalidate";
    etag on;
    try_files   $uri @proxy;
  }

  location ~ \.php$ {
    include fastcgi.conf;
    fastcgi_pass app-registry-mock:9000;
    fastcgi_intercept_errors off;
    try_files $fastcgi_script_name @proxy;
  }

  location @proxy {
    include fastcgi.conf;
    fastcgi_pass app-registry-mock:9000;

    proxy_set_header Host $host;
    fastcgi_index index.php;
    fastcgi_param SCRIPT_NAME /index.php;
    fastcgi_param SCRIPT_FILENAME $document_root/index.php;
    fastcgi_param APPLICATION_STORE "DE";
  }

  client_max_body_size 10m;
  proxy_connect_timeout 1m;
  proxy_read_timeout 1m;
  proxy_send_timeout 1m;
  fastcgi_send_timeout 1m;
  fastcgi_read_timeout 1m;
  client_body_timeout 1m;
  client_header_timeout 1m;
  send_timeout 1m;
  keepalive_timeout 1m;
}
