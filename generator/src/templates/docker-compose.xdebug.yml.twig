version: "3.5"

x-volumes:
  &xdebug-volumes
  volumes:
    - ./${DEPLOYMENT_PATH}/context/php/conf.d/xdebug.ini:/usr/local/etc/php/conf.d/01-xdebug.ini:ro

services:
{% for group in groups %}
{% for applicationName, applicationData in group['applications'] %}

  {{ applicationName | lower }}:
    <<: *xdebug-volumes
{% endfor %}
{% endfor %}
